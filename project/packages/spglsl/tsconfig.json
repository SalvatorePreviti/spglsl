{
  "extends": "@balsamic/eslint-config/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": false,
    "outDir": "dist",
    "useDefineForClassFields": false,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src"]
}
