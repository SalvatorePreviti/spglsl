{
  "name": "spglsl-project",
  "version": "1.0.0",
  "private": true,
  "description": "spglsl",
  "keywords": [
    "spglsl"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "engines": {
    "node": ">=16.6.1"
  },
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "mocha --recursive --require @swc-node/register \"test/**/*.test.ts\"",
    "conformance-test-server": "node -r @swc-node/register ./conformance/conformance-test-server-start.ts",
    "conformance-tests": "node -r @swc-node/register ./conformance/conformance-test-runner.ts",
    "precommit": "lint-staged && pretty-quick --staged && ./scripts/build-ts.sh"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --loglevel=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --loglevel=warn"
    ]
  },
  "devDependencies": {
    "@balsamic/eslint-config": "^0.2.2",
    "@swc-node/register": "^1.5.1",
    "@swc/helpers": "^0.4.3",
    "@types/chai": "^4.3.1",
    "@types/cheerio": "^0.22.31",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/puppeteer": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "cheerio": "1.0.0-rc.12",
    "eslint": "^8.18.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.0.5",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.18.1",
    "fast-glob": "^3.2.11",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "puppeteer": "^15.2.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
