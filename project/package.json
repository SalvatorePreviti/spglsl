{
  "name": "spglsl-project",
  "version": "0.2.0",
  "private": true,
  "description": "spglsl",
  "keywords": [
    "spglsl"
  ],
  "license": "MIT",
  "author": "Salvatore Previti",
  "engines": {
    "node": ">=16.6.1"
  },
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "mocha --recursive --require @swc-node/register \"test/**/*.test.ts\"",
    "conformance-test-server": "node -r @swc-node/register ./conformance/conformance-test-server-start.ts",
    "conformance-tests": "node -r @swc-node/register ./conformance/conformance-test-runner.ts",
    "precommit": "lint-staged && ./scripts/build-ts.sh",
    "lint": "eslint --no-error-on-unmatched-pattern --fix . && prettier --write --loglevel=warn"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mts,cts,cjs,mjs,json}": [
      "eslint --no-error-on-unmatched-pattern --fix",
      "prettier --write --loglevel=warn"
    ],
    "*.{yml,yaml,md,htm,html,css,scss,less}": [
      "prettier --write --loglevel=warn"
    ]
  },
  "devDependencies": {
    "@balsamic/eslint-config": "^0.6.11",
    "@swc-node/register": "^1.8.0",
    "@swc/helpers": "^0.5.6",
    "@types/chai": "^4.3.12",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@types/puppeteer": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "chai": "^4.4.1",
    "cheerio": "1.0.0-rc.12",
    "eslint": "^8.57.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-mocha": "^10.3.0",
    "eslint-plugin-node": "^11.1.0",
    "express": "^4.18.3",
    "fast-glob": "^3.3.2",
    "husky": "^9.0.11",
    "lint-staged": "^13.3.0",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
